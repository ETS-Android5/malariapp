<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:layout_height="56.0dip"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/actionbar_gradient"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
    <org.eyeseetea.malariacare.views.CustomTextView android:id="@+id/action_bar_multititle_title"
        android:layout_height="28dip"
        android:layout_width="wrap_content"
        android:gravity="center"
        app:tFontName="@string/light_font"
        android:textSize="17dip"/>

    <org.eyeseetea.malariacare.views.CustomTextView android:id="@+id/action_bar_multititle_subtitle"
        android:layout_height="28dip"
        android:layout_width="wrap_content"
        app:tFontName="@string/light_font"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/text_dark_grey"
        android:textSize="16dip"/>
    </LinearLayout>

    <org.eyeseetea.malariacare.views.CustomTextView android:id="@+id/action_bar_user"
        android:layout_height="28dip"
        android:layout_width="wrap_content"
        app:tFontName="@string/font_name_medium"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_dark_grey"
        android:paddingRight="10dp"
        android:textSize="14dip"/>
</RelativeLayout>