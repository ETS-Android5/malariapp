<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_layout_margins_left_right"
        android:layout_marginRight="@dimen/dialog_layout_margins_left_right"
        android:background="@android:color/white">

    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/dialog_button_preview_feedback"
        style="@style/EyeSeeDialogButton"/>
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/action_plan"
        android:layout_below="@id/view"
        android:text="@string/dialog_action_plan"
        style="@style/EyeSeeDialogButton"/>
    <org.eyeseetea.malariacare.views.CustomButton
        android:id="@+id/cancel"
        android:layout_below="@id/action_plan"
        android:text="@string/cancel"
        style="@style/EyeSeeDialogCancelButton"/>
    </RelativeLayout>
</FrameLayout>