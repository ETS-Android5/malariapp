<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabsLayout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/tabsImage"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="50dp"
        android:padding="@dimen/tab_host_padding"
        android:scaleType="fitCenter" />
    <ImageView
        android:id="@+id/tabSecundaryImage"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/tab_host_padding"
        android:scaleType="fitCenter" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/tabsText"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textColor="@color/unselected_text_tab_color"
        android:textSize="@dimen/tab_host_text_size"
        app:tDimension="@string/font_size_level2"
        app:tFontName="@string/light_font"  />
</LinearLayout>