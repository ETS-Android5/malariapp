<resources>

    <style name="Widget.AppCompat.Spinner.EyeSeeSpinner">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="EyeSeeTheme" parent="Theme.AppCompat.Light">
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="displayOptions">useLogo|showHome|homeAsUp|showTitle</item>
        <item name="logo">@drawable/qualityapp_logo</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="LoginScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/dark_navy_blue</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="EyeSeeTextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="EyeSeeTextMedium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="EyeSeeTextLarge">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
   <style name="EyeSeeTextExtra">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="EyeSeeDialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/plan_grey_light</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="tDimension">@string/font_size_level4</item>
        <item name="font_name">@string/font_name_medium</item>
    </style>
    <style name="EyeSeeDialogSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">24dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="font_name">@string/font_name_medium</item>
        <item name="tDimension">@string/font_size_level4</item>
    </style>
    <style name="EyeSeeDialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_header_height</item>
        <item name="android:layout_margin">@dimen/dialog_button_space</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/dialog_button_size</item>
        <item name="android:background">@color/dialog_button_background_text</item>
        <item name="android:textColor">@color/dialog_button_text</item>
        <item name="font_name">@string/font_name_medium</item>
        <item name="tDimension">@string/font_size_level4</item>
    </style>
    <style name="EyeSeeDialogCancelButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_header_height</item>
        <item name="android:layout_margin">@dimen/dialog_button_space</item>
        <item name="android:textSize">@dimen/dialog_button_size</item>
        <item name="android:background">@color/dialog_button_background_text</item>
        <item name="android:textColor">@color/dialog_button_text</item>
        <item name="font_name">@string/font_name_medium</item>
        <item name="tDimension">@string/font_size_level4</item>
    </style>

    <style name="EyeSeeLoginLogoTitle">
        <item name="android:visibility">gone</item>
    </style>
    <style name="EyeSeeServerUrl">
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">56dp</item>
    </style>
    <style name="EyeSeeTeaLoginServerEdittext">
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textUri</item>
        <item name="android:singleLine">true</item>
        <item name="tFontName">@string/font_name_regular</item>
    </style>

    <style name="EyeSeeLogOutButton">
        <item name="android:visibility">gone</item>
    </style>
    <style name="EyeSeeDemoButton">
        <item name="android:visibility">gone</item>
    </style>
    <style name="EyeSeeProgressActivityLogo">
        <item name="android:src">@drawable/qualityapp_logo</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EyeSeeAssessHeader">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/header_light_text_size</item>
    </style>
    <style name="EyeSeeViewSeparatorVisibility">
        <item name="android:visibility">gone</item>
    </style>
    <style name="EyeSeeAssessSubHeader">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/header_light_text_size</item>
    </style>
    <style name="EyeSeeAssessList">
        <item name="android:background">@color/white</item>
    </style>
    <style name="EyeSeeStartButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EyeSeeCreateButton">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/create_info_ok</item>
        <item name="android:textColor">@color/start_button_text</item>
        <item name="android:background">@drawable/button_round_border</item>
        <item name="bDimension">@string/font_size_level2</item>
        <item name="bFontName">@string/medium_font_name</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="EyeSeeCreateSpinner">
        <item name="android:backgroundTintMode">add</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="EyeSeeCreateSpinnerImage">
        <item name="android:src">@drawable/arrow_assess</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="EyeSeeSimpleSpinnerItem">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:alpha">0.8</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EyeSeeDateButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:paddingRight">@dimen/question_padding_all</item>
        <item name="android:paddingLeft">@dimen/question_padding_all</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:text">@string/empty_string</item>
        <item name="android:background">@drawable/background_textfield</item>
        <item name="bFontFamily">@string/normal_font</item>
    </style>
    <style name="EyeSeeDllStatement">
        <item name="android:layout_weight">0.65</item>
        <item name="android:padding">5dip</item>
        <item name="android:paddingLeft">@dimen/question_padding_left</item>
        <item name="android:text">@string/widget_info_empty_statement</item>
        <item name="android:textColor">@color/black</item>
        <item name="tFontName">@string/medium_font_name</item>
        <item name="tDimension">@string/font_size_level1</item>
    </style>
    <style name="EyeSeeDemoLoginButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:orientation">vertical</item>
        <item name="android:text">@string/demo_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="bFontName">@string/bold_font_name</item>
    </style>
    <style name="EyeSeePieChartImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_action_check</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
