<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_tab"
    style="@style/EyeSeeSurveyContainer">
    <ProgressBar
        android:id="@+id/survey_progress"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/progress_text"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:layout_below="@+id/survey_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <include
        android:id="@+id/header_layout"
        style="@style/EyeSeeSurveyHeader"
        layout="@layout/main_header"/>

    <include
        android:id="@+id/form_footer_layout"
        style="@style/EyeSeeSurveyFooter"
        layout="@layout/form_footer"/>
    <LinearLayout
        android:id="@+id/content"
        style="@style/EyeSeeSurveyContent"/>
    <ImageButton
        android:id="@+id/backToSentSurveys"
        style="@style/EyeSeeSurveyImage"/>
</RelativeLayout>