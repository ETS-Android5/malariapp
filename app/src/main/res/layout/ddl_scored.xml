<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ddl"
    android:orientation="horizontal"
    android:paddingRight="@dimen/question_padding_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/parent_child_images"></include>
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/statement"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:padding="5dip"
            android:paddingLeft="@dimen/question_padding_left"
            android:text="@string/widget_info_empty_statement"
            android:textColor="@color/new_grey_text_color"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/medium_font_name" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="@dimen/row_size"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.25"
        android:background="@color/white"
        android:layout_marginRight="@dimen/question_margin_right"
        android:orientation="vertical">
                <Spinner
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="@dimen/row_size"
                    android:backgroundTint="@color/headerColor"
                    android:backgroundTintMode="add"
                    android:spinnerMode="dropdown" />
    </LinearLayout>

    <include layout="@layout/score"></include>
</LinearLayout>