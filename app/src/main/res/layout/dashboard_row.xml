<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:onClick="newSurvey"
    android:measureWithLargestChild="false">

    <org.eyeseetea.malariacare.views.TextCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/empty_string"
        android:textColor="@color/black"
        android:id="@+id/title"
        android:padding="5dip"
        app:tDimension="@string/font_size_level2"
        app:tFontName="@string/condensed_font_name" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard_table"/>


    <org.eyeseetea.malariacare.views.TextCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dashboard_button_see_all"
        android:textColor="@color/headerColor"
        android:typeface="monospace"
        android:id="@+id/see_all"
        android:textStyle="bold"
        app:tDimension="@string/font_size_level2"
        app:tFontName="@string/condensed_font_name" />

    <include layout="@layout/assessment_footer" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

</LinearLayout>