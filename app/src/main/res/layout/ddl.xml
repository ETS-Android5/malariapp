<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ddl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/question_padding_right"
    android:orientation="horizontal">

    <include layout="@layout/parent_child_images"></include>
    <org.eyeseetea.malariacare.views.CustomTextView
        android:id="@+id/statement"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        style="@style/EyeSeeDllStatement" />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/row_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:layout_marginRight="@dimen/question_margin_right"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="@dimen/row_size"
                android:backgroundTint="@color/headerColor"
                android:backgroundTintMode="add"
                android:spinnerMode="dropdown" />
        </LinearLayout>

</LinearLayout>