<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/compositivescoreTable">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow2"
            android:layout_gravity="center"
            android:background="@drawable/background_odd" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/idHeader"
                android:id="@+id/idHeader"
                android:background="@drawable/background_header"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="5dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/nameHeader"
                android:id="@+id/nameHeader"
                android:background="@drawable/background_header"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="5dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/scoreHeader"
                android:id="@+id/scoreHeader"
                android:background="@drawable/background_header"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="5dip" />
        </TableRow>
    </TableLayout>
</LinearLayout>