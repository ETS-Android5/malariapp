<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_margin="20dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <org.eyeseetea.sdk.presentation.views.CustomTextView
            android:id="@+id/org_unitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/dialog_tile_row_size"
            android:background="@color/dialog_header_background"
            android:textColor="@color/dialog_header_title_text"
            app:font_name="@string/font_name_medium"  />

        <org.eyeseetea.sdk.presentation.views.CustomTextView
            android:id="@+id/programName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/dialog_row_background"
            android:textSize="@dimen/dialog_tile_row_size"
            android:textColor="@color/dialog_header_title_text"
            app:font_name="@string/font_name_medium" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/cancel"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/log_content"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <org.eyeseetea.sdk.presentation.views.CustomButton
        android:id="@id/cancel"
        android:layout_alignParentBottom="true"
        android:text="@string/cancel"
        style="@style/EyeSeeDialogCancelButton"   />

</RelativeLayout>