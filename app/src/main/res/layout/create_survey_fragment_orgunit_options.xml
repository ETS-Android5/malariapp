<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/assess_grey"
        android:id="@+id/org_unit_container">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/create_survey_title_top_marging"
        android:background="@color/assess_grey"
        android:gravity="center">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/create_info_organization_unit"
            app:tDimension="@string/font_size_level4"
            app:tFontName="@string/medium_font_name"
            android:textAllCaps="true"
            android:id="@+id/textView2"
            android:textSize="@dimen/creation_title"
            android:background="@color/assess_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_textfield">

        <Spinner
            android:dropDownWidth="match_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/org_unit"
            android:spinnerMode="dropdown"
            style="@style/EyeSeeCreateSpinner"/>
        <ImageView
            style="@style/EyeSeeCreateSpinnerImage"/>
        <View
            style="@style/EyeSeeViewFeedbackSeparatorVisibility"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/new_grey"
            android:layout_marginRight="6dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/program"/>
    </RelativeLayout>
        <Space
            android:background="@color/assess_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_survey_title_extra_bottom_marging" />
    </LinearLayout>
</merge>