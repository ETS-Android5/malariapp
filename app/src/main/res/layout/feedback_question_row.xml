<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/feedback_question_arrow"
            style="@style/EyeSeeFeedbackQuestionRowImageArrow"/>
        <LinearLayout
            android:orientation="vertical"
            style="@style/EyeSeeFeedbackQuestionLL">

            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/feedback_question_label"
                style="@style/EyeSeeFeedbackQuestionLabel"
                />
            <org.eyeseetea.malariacare.views.CustomTextView
                android:id="@+id/feedback_uid"
                style="@style/EyeSeeFeedbackQuestionUid"
                />
        </LinearLayout>
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_option_value"
            style="@style/EyeSeeFeedbackQuestionValue"
            />
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_score_label"
            style="@style/EyeSeeFeedbackQuestionScore"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedback_container"
        style="@style/EyeSeeFeedbackQuestionContainer">
        <View
            android:id="@+id/feedback_separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/darkGrey"/>
        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/feedback_feedback_html"
            style="@style/EyeSeeFeedbackQuestionHtml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feedback_question_row_left_padding"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="@color/black"
            android:text="@string/lorem_ipsum"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkGrey"
        style="@style/EyeSeeViewFeedbackSeparatorVisibility"></View>
</LinearLayout>

