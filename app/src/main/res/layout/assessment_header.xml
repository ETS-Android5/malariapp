<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <TextView
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/assessment_title_facility_date"
        android:id="@+id/idHeader"
        android:background="@drawable/background_header"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:fontFamily="@string/medium_font_name" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="@string/assessment_title_state"
        android:id="@+id/nameHeader"
        android:background="@drawable/background_header"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:autoText="false"
        android:fontFamily="@string/medium_font_name" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dip"
        android:background="@drawable/background_header">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_button_new_survey"
            android:id="@+id/button"
            android:onClick="newSurvey"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/headerColor"
            android:fontFamily="@string/normal_font" />
    </LinearLayout>

</TableRow>