    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dashboard_scroll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/custom_background_grey"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@android:id/tabs"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:id="@+id/tab_plan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                         <LinearLayout
                            android:id="@+id/dashboard_planning_tab"
                            android:orientation="vertical" android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/custom_background_grey">
                                <Spinner
                                    android:id="@+id/dashboard_planning_program"
                                    android:layout_width="wrap_content"
                                    android:spinnerMode="dialog"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="add"
                                    android:backgroundTint="@color/custom_background_grey"></Spinner>
                            </LinearLayout>
                            <!-- list view will be automatically added here by the list fragment -->

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_assess_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dashboard_details_container">

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/dashboard_details_table">

                                <ListView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dashboard_details_list"/>

                            </TableLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_improve_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/filters_sentSurveys">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/filter_orgunit"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:id="@+id/filter_program"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <org.eyeseetea.malariacare.views.CustomTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_string"
                            android:textColor="@color/black"
                            android:id="@+id/titleCompleted"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            app:tDimension="@string/font_size_level2"
                            app:tFontName="@string/condensed_font_name" />
                    </LinearLayout>

                        <ScrollView
                            android:id="@+id/dashboard_scroll_sent"
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:fillViewport="true">
                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dashboard_completed_container">

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/dashboard_details_table_sent">

                                <ListView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dashboard_details_list_sent"/>

                            </TableLayout>
                        </FrameLayout>
                    </ScrollView>
                     </LinearLayout>
                     <LinearLayout
                         android:id="@+id/tab_monitor_layout"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">
                         <FrameLayout
                             android:orientation="vertical"
                             android:layout_width="fill_parent"
                             android:layout_height="match_parent"
                             android:id="@+id/dashboard_charts_container">

                                 <WebView
                                     android:id="@+id/dashboard_monitor"
                                     android:layout_width="fill_parent"
                                     android:layout_height="fill_parent"
                                     android:background="@color/light_grey"
                                     android:focusable="true"
                                     >
                                 </WebView>
                         </FrameLayout>
                     </LinearLayout>
                 </FrameLayout>
             </RelativeLayout>
         </TabHost>

     </LinearLayout>