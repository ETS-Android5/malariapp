<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layoutFirstHeader"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/assess_grey"
                android:minHeight="@dimen/header_min_height"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:id="@+id/org_unit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="@string/feedback_return"
                    android:textAllCaps="true"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/planning_header_text"
                    android:textSize="@dimen/header_big_text_size"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/roboto_medium" />

                <org.eyeseetea.malariacare.views.CustomTextView
                    android:id="@+id/observations"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|left"
                    android:text="@string/plan_action_title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/planning_header_text"
                    android:textSize="@dimen/header_medium_text_size"
                    app:tDimension="@string/font_size_level1"
                    app:tFontName="@string/roboto_regular" />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <org.eyeseetea.malariacare.views.CustomTextView
                        android:id="@+id/completed_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/completed_title"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/planning_header_text"
                        android:textSize="@dimen/header_small_text_size"
                        app:tDimension="@string/font_size_level1"
                        app:tFontName="@string/roboto_regular" />

                    <org.eyeseetea.malariacare.views.CustomTextView
                        android:id="@+id/completion_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="completed"
                        android:textColor="@color/planning_header_text"
                        android:textSize="@dimen/header_medium_right_text_size"
                        app:tDimension="@string/font_size_level1"
                        app:tFontName="@string/roboto_medium" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutSecondHeader"
                android:layout_below="@id/layoutFirstHeader"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:background="@color/assess_grey"
                android:minHeight="@dimen/header_min_height"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <org.eyeseetea.malariacare.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left"
                        android:text="@string/overall_quality_of_care"
                        android:textColor="@color/planning_header_text"
                        android:textSize="@dimen/header_small_text_size"
                        app:tDimension="@string/font_size_level1"
                        app:tFontName="@string/roboto_regular"  />

                    <org.eyeseetea.sdk.presentation.views.DoubleRectChart
                        android:id="@+id/scoreChart"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                    <org.eyeseetea.malariacare.views.CustomTextView
                        android:id="@+id/next_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/completed_next"
                        android:textColor="@color/planning_header_text"
                        android:textSize="@dimen/header_medium_right_text_size"
                        app:tDimension="@string/font_size_level1"
                        app:tFontName="@string/roboto_regular"/>

                    <org.eyeseetea.malariacare.views.CustomTextView
                        android:id="@+id/next_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textColor="@color/planning_header_text"
                        android:textSize="@dimen/header_medium_right_text_size"
                        app:tDimension="@string/font_size_level1"
                        app:tFontName="@string/roboto_medium" />
                    </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/backToSentSurveys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:src="@drawable/ic_back"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <org.eyeseetea.malariacare.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:text="@string/plan_action_description"
                android:textColorHint="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tDimension="@string/font_size_level1"
                app:tFontName="@string/roboto_regular" />

            <org.eyeseetea.malariacare.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:paddingLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:paddingTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:text="@string/plan_action_gasp_title"
                android:background="@color/plan_action_title_background_color"
                android:textColor="@color/plan_action_title_color"
                android:textSize="@dimen/plan_action_text_title_size"
                app:tDimension="@string/font_size_level2"
                app:tFontName="@string/roboto_medium"></org.eyeseetea.malariacare.views.CustomTextView>

            <org.eyeseetea.malariacare.views.CustomEditText
                android:id="@+id/plan_action_gasp_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:scrollbars="none"
                android:hint="@string/plan_action_edit_text_hint"
                android:textColorHint="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tFontName="@string/roboto_regular" />

            <org.eyeseetea.malariacare.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:paddingLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:paddingTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:text="@string/plan_action_action_plan_title"
                android:background="@color/plan_action_title_background_color"
                android:textColor="@color/plan_action_title_color"
                android:textSize="@dimen/plan_action_text_title_size"
                app:tDimension="@string/font_size_level2"
                app:tFontName="@string/font_name_medium"></org.eyeseetea.malariacare.views.CustomTextView>

            <org.eyeseetea.malariacare.views.CustomEditText
                android:id="@+id/plan_action_action_plan_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:hint="@string/plan_action_edit_text_hint"
                android:textColorHint="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tFontName="@string/roboto_regular"
                android:minLines="5"
                android:scrollbars="none" />

            <org.eyeseetea.malariacare.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:paddingLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:paddingTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:text="@string/plan_action_action_title"
                android:background="@color/plan_action_title_background_color"
                android:textColor="@color/plan_action_title_color"
                android:textSize="@dimen/plan_action_text_title_size"
                app:tDimension="@string/font_size_level2"
                app:tFontName="@string/font_name_medium"></org.eyeseetea.malariacare.views.CustomTextView>

            <org.eyeseetea.malariacare.views.CustomSpinner
                android:id="@+id/plan_action_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/plan_action_spinner_background"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:textColor="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tFontName="@string/roboto_regular">

            </org.eyeseetea.malariacare.views.CustomSpinner>

            <org.eyeseetea.malariacare.views.CustomSpinner
                android:id="@+id/plan_action_secondary_spinner"
                android:layout_width="match_parent"
                android:background="@drawable/plan_action_spinner_background"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:textColor="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tFontName="@string/roboto_regular"
                android:visibility="gone">

            </org.eyeseetea.malariacare.views.CustomSpinner>

            <View
                android:id="@+id/secondaryView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:background="@color/assess_grey"></View>

            <org.eyeseetea.malariacare.views.CustomEditText
                android:id="@+id/plan_action_others_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_feedback_top_bottom_radiobutton"
                android:layout_marginLeft="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginRight="@dimen/margin_lateral_feedback_radiobutton"
                android:layout_marginTop="@dimen/margin_feedback_top_bottom_radiobutton"
                android:background="@android:color/transparent"
                android:minLines="1"
                android:scrollbars="none"
                android:visibility="gone"
                android:hint="@string/plan_action_edit_text_hint"
                android:textColorHint="@color/action_plan_hint"
                android:textSize="@dimen/plan_action_text_size"
                app:tFontName="@string/roboto_regular"  />

            <View
                android:id="@+id/otherView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:background="@color/assess_grey"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_65"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"></View>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fab2"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="12dp"
            android:gravity="center"
            app:tFontName="@string/roboto_medium"
            android:layout_gravity="center"
            android:background="@drawable/rounded_text_background"
            android:textColor="@color/white"
            android:textSize="@dimen/plan_action_button_text_size"
            android:text="@string/html_text"
            android:visibility="gone" />


        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab2"
            android:layout_width="@dimen/standard_45"
            android:visibility="gone"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/standard_21"
            app:backgroundTint="@color/grey_light_qm"
            app:fabSize="mini"/>

        <org.eyeseetea.malariacare.views.CustomTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fab1"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_text_background"
            android:textSize="@dimen/plan_action_button_text_size"
            android:textColor="@color/white"
            android:text="@string/plain_text"
            app:tFontName="@string/roboto_medium"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab1"
            android:visibility="gone"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/standard_21"
            app:backgroundTint="@color/grey_light_qm"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            app:backgroundTint="@color/grey_light_qm"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_share" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fab"
            android:layout_marginBottom="@dimen/standard_21"
            android:layout_marginRight="@dimen/standard_45"
            android:layout_marginTop="@dimen/standard_21"
            app:backgroundTint="@color/grey_light_qm"
            app:fabSize="mini"
            app:srcCompat="@drawable/vct_action_uncheck" />
    </RelativeLayout>
</RelativeLayout>